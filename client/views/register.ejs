<%- include('./partials/loginHeader') -%>
    <div class="wrapper">
      <div class="logo-wrapper">
        <img src="images/logo.png" alt="logo" />
      </div>
      <h2 class="title">Register</h2>
      <%- include('./partials/messages') -%>
      <form action="/register" method="POST" class="form">
        <div class="input-wrapper">
          <label for="name">Full Name <span>*</span></label>
          <input type="text" name="name" />
        </div>
        <div class="input-wrapper">
          <label for="email">Email <span>*</span></label>
          <input type="email" name="email" />
        </div>        
        <div class="input-wrapper">
          <label for="number">Mobile number <span>*</span></label>
          <input type="number" name="number" />
        </div>
        <div class="input-wrapper">
          <label for="password">Role <span>*</span></label>
          <select name="role" id="">
            <option value="CEO">Cheaf Executive</option>
            <option value="manager">Manager</option>
            <option value="emp">Employee</option>
          </select>
        </div>
        <div class="input-wrapper">
          <label for="password">Password <span>*</span></label>
          <input type="password" name="password" />
        </div>
        <div class="input-wrapper">
          <label for="password2">Confirm Password <span>*</span></label>
          <input type="password" name="password2" />
        </div>
        <button type="submit" class="submit-btn">Signup</button>
        <p class="question">
          Already registered? <a href="/login" class="forgot-pwd">login</a>
        </p>
      </form>
    </div>
  <%- include('./partials/loginFooter') -%>
